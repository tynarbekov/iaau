<div class="container content" style="height: 500px;">

  <div class="col-md-6">
    <h3>Group <%= @group.name %> </h3>
    <% if @group.user_id == nil %>
    <h4>  <%= "This Group have not Advisor" %></h4>
    <% else %>
    <h4> Advisor is: <%= link_to "#{@group.user.username}", user_path(@group.user_id) %> </h4>
    <% end %>
    <h3>Students this group</h3>
    <% @students.each do |student| %>
    <%= link_to "#{student.name} #{student.surname}", user_path(student) %><br>
    <% end  %>
  </div>


  <br>

  <h4>Group configurations:</h4>
  <div class="col-md-6">
    <%= link_to "Edit", edit_group_path(@group) %> |
    <%= link_to "Delete", group_path(@group), method: :delete,data: { confirm: 'Are you sure?' } %>

  </div>

</div>
