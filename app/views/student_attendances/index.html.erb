<p id="notice"><%= notice %></p>

<h1>Student Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Schedule</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_attendances.each do |student_attendance| %>
      <tr>
        <td><%= student_attendance.schedule %></td>
        <td><%= student_attendance.user %></td>
        <td><%= link_to 'Show', student_attendance %></td>
        <td><%= link_to 'Edit', edit_student_attendance_path(student_attendance) %></td>
        <td><%= link_to 'Destroy', student_attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

